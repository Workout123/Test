<h1>New review</h1>

<% form_for([@item, @review]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :reviewer %><br />
    <%= f.text_field :reviewer %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', item_reviews_path(@item) %>
